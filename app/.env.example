# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS (SUPABASE)
# ============================================
# 
# IMPORTANTE: Configure a DATABASE_URL com suas credenciais do Supabase
# Veja ENV_SETUP.md para instruções detalhadas
#
# Opção 1: URL completa (RECOMENDADO)
# Substitua [PASSWORD] e ajuste o host conforme seu Supabase
DATABASE_URL=postgresql+asyncpg://postgres.xxxxxxxxxxxxx:[PASSWORD]@aws-0-sa-east-1.pooler.supabase.com:6543/postgres

# Opção 2: Componentes individuais (ALTERNATIVA)
# Descomente estas linhas se preferir usar componentes separados
# DB_HOST=db.xxxxxxxxxxxxx.supabase.co
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=sua_senha_aqui
# DB_NAME=postgres

# Configurações opcionais do banco
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================
# CONFIGURAÇÕES DO MERCADO LIVRE
# ============================================

ML_URL=https://www.mercadolivre.com.br/ofertas
CARD_SELECTOR=.andes-card.poly-card.poly-card--grid-card.poly-card--xlarge.andes-card--flat.andes-card--padding-0.andes-card--animated
TITLE_SELECTOR=.poly-component__title-wrapper
PICTURE_SELECTOR=.poly-component__picture
PRICE_FRACTION_SELECTOR=span.andes-money-amount.andes-money-amount--cents-superscript span.andes-money-amount__fraction
PRICE_CENTS_SELECTOR=span.andes-money-amount.andes-money-amount--cents-superscript span.andes-money-amount__cents
OLD_FRACTION_SELECTOR=s.andes-money-amount.andes-money-amount--previous span.andes-money-amount__fraction
OLD_CENTS_SELECTOR=s.andes-money-amount.andes-money-amount--previous span.andes-money-amount__cents
DISCOUNT_SELECTOR=span.andes-money-amount__discount.poly-price__disc--pill

# ============================================
# CONFIGURAÇÕES DE SCRAPING
# ============================================

ML_MAX_SCROLLS=4
NUMBER_OF_PAGES=1
ML_SCROLL_DELAY_S=0.45
ML_PAGE_DELAY_S=0.0
MIN_DISCOUNT_PCT=50.0
ONLY_WITH_OLD_PRICE=false
DEBUG_DUMP=false

# ============================================
# CONFIGURAÇÕES DE AFILIAÇÃO
# ============================================

COMMISSION_SELECTOR=span.stripe-commission__percentage
COMMISSION_SELECTOR_ALTERNATIVE=div.stripe-commission__info span
BUTTON_SELECTOR=span.andes-button__text
AFFILIATE_SHARE_TEXT=Compartilhar
AFFILIATE_LINK_SELECTOR=[data-testid="text-field__label_link"]
AFFILIATION_ID_SELECTOR=[data-testid="text-field__label_id"]
AFFILIATE_CONCURRENCY=3

# ============================================
# CONFIGURAÇÕES GERAIS
# ============================================

MAX_ITEMS_PRINT=20
